# root = true should be at the very top of the file
root = true

# =========================================================
# CORE EDITORCONFIG RULES (Apply to all files)
# =========================================================

[*]
# Indentation and spacing
indent_style = space
indent_size = 4
tab_width = 4

# Line endings
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8


# =========================================================
# C# RULES (Apply to .cs files)
# =========================================================


[*.cs]
# --- C# Formatting (Spacing and New Lines) ---

# Bracing Style (Allman for methods/blocks, K&R for objects/initializers)
# Puts { on a new line for types, methods, properties, and control flow blocks (if/while/for/etc.)
# csharp_new_line_before_open_brace = methods, properties, control_blocks, types

# Newline control for block keywords
csharp_new_line_before_else = true
csharp_new_line_before_catch = true
csharp_new_line_before_finally = true
csharp_new_line_before_open_brace.accessors = new_line # Property accessors (get/set)

# Indentation
csharp_indent_case_contents = true
csharp_indent_switch_labels = true

# Spacing
csharp_space_after_cast = false
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_around_binary_operators = before_and_after
csharp_space_between_method_call_name_and_opening_parenthesis = false
csharp_space_between_method_declaration_name_and_opening_parenthesis = false
